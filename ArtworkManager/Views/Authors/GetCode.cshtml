@model ArtworkManager.Models.ViewModels.ArtWorkFormViewModel
@{
    ViewData["Title"] = "GetCode";
}

<h2></h2>

<h3>Your last publication code used is:</h3>
<textarea readonly id="publicationcode">@Html.DisplayFor(model => model.PublicationCode)</textarea>


<h3>Below you can see your next free code to use:</h3>

<div>
    <hr />
    <d1 class="dl-horizontal">


        <textarea readonly id="code">@Html.DisplayFor(model => model.Artwork.Code)</textarea>

        <br>



    </d1>

  
    

    <form asp-action="GetCode">
        <input type="hidden" asp-for="Artwork.Id" />

        <div class="form-group">
            <div class="checkbox">
                <label>
                    Is it an advanced artwork?<br />
                    <input asp-for="TypeOfArtwork" /> @Html.DisplayNameFor(model => model.TypeOfArtwork)
                </label>
            </div>
        </div>

        <button onclick="copy()">Copy</button>
        <script type="text/javascript">
            function copy() {
                var copyText = document.getElementById("code");
                copyText.select();
                copyText.setSelectionRange(0, 99999);
                document.execCommand("copy");
            }
        </script>



        <a asp-action="Index">Back to List</a>
    </form>
</div>

