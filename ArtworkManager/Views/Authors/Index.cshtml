@model IEnumerable<ArtworkManager.Models.Author>
@{
    ViewData["Title"] = "Authors";
}

<h2>@ViewData["Title"]</h2>

<p>
      
    <a asp-action="Create" class="btn btn-default">Create New</a>
  
</p>



<table class= "table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.Name)
            </td>

            <td>


                <a asp-action="AddPublicationCode" asp-route-id="@item.Id">Get a code ! (add a new publication code!)</a>

                <br />

                <a asp-action="GetCode" asp-route-id="@item.Id">Get a code ! (from the last publication code used!)</a>

                <br />

                <a asp-action="ShowAllCodes" asp-route-id="@item.Id">See list of codes</a>


            </td>
        </tr>
        }
    </tbody>

</table>