@model ArtworkManager.Models.User
@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login" method="post" id="principal">
    <div class="panel panel-body login-form panel-login">
        <div class="text-center">
            
            <h5 class="content-group">
                Welcome :)
            </h5>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <span asp-validation-for="Login" class="text-danger"></span>
        <span style="color:red">@ViewData["erro"]</span>
        <div class="form-group has-feedback has-feedback-left">
            <input type="text" input asp-for="Login" class="form-control" placeholder="Login">
            <div class="form-control-feedback">
                <i class="icon-user text-muted"></i>
            </div>
        </div>

        <span asp-validation-for="Password" class="text-danger"></span>
        <div class="form-group has-feedback has-feedback-left">
            <input asp-for="Password" class="form-control" type="password" placeholder="Password">
            <div class="form-control-feedback">
                <i class="icon-lock2 text-muted"></i>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-block btn-login">Login<i class="icon-circle-right2 position-right"></i></button>
        </div>
        <small class="display-block" style="font-size:80%">Artwork Manager</small>
        <small class="display-block" style="font-size:80%"><i>&#169;                    ( ͡° ͜ʖ ͡°)</i></small>
    </div>
</form>

